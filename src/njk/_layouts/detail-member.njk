{% extends '_layouts/base.njk' %}

{% block page_title %}{{ member.name }}{% endblock %}

{% block member_description %}{{ member.title }} by {{ member.name }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src="img/members/{{member.image}}" alt="" class="img-fluid">
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block blurb %}
        <h1>{{ member.name }}</h1>
         <p> <b> Birthplace: </b> {{ member.birthplace }}</p>
          <p> <b> Birthdate: </b> {{ member.birthdate }}</p>
           <p> <b> Instruments: </b> {{ member.instruments }}</p>
            <p> <b> Tenure: </b> {{ member.tenure }}</p>
        <p>{{ member.text|safe }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
